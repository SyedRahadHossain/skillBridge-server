generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  password     String
  role         String   // "student" | "tutor" | "admin"
  avatar       String?
  isActive     Boolean  @default(true)  // for ban/unban
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tutorProfile TutorProfile?
  bookingsAsStudent Booking[] @relation("StudentBookings")
  reviews      Review[]
}
model TutorProfile {
  id          Int      @id @default(autoincrement())
  userId      Int      @unique
  user        User     @relation(fields: [userId], references: [id])
  bio         String?
  hourlyRate  Float
  experience  Int?     // years of experience
  rating      Float    @default(0)
  totalReviews Int     @default(0)
  availability Json?   // store availability slots as JSON
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  categories  TutorCategory[]
  bookings    Booking[]
  reviews     Review[]
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique  // e.g. "Math", "Physics"
  icon      String?
  createdAt DateTime @default(now())

  tutors    TutorCategory[]
}

model TutorCategory {
  tutorProfileId Int
  categoryId     Int
  tutorProfile   TutorProfile @relation(fields: [tutorProfileId], references: [id])
  category       Category     @relation(fields: [categoryId], references: [id])

  @@id([tutorProfileId, categoryId])
}

model Booking {
  id             Int      @id @default(autoincrement())
  studentId      Int
  tutorProfileId Int
  student        User         @relation("StudentBookings", fields: [studentId], references: [id])
  tutorProfile   TutorProfile @relation(fields: [tutorProfileId], references: [id])
  scheduledAt    DateTime
  duration       Int       // in minutes
  totalPrice     Float
  status         String    // "confirmed" | "completed" | "cancelled"
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  review         Review?
}

model Review {
  id             Int      @id @default(autoincrement())
  bookingId      Int      @unique
  studentId      Int
  tutorProfileId Int
  booking        Booking      @relation(fields: [bookingId], references: [id])
  student        User         @relation(fields: [studentId], references: [id])
  tutorProfile   TutorProfile @relation(fields: [tutorProfileId], references: [id])
  rating         Int       // 1â€“5
  comment        String?
  createdAt      DateTime  @default(now())
}